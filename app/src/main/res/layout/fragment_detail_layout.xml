<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_detail"
    android:background="@color/gray_old"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/linear_head_content_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/linear_image_content"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_five"
                app:layout_constraintTop_toBottomOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/weight_one"
                    >
                    <ProgressBar
                        android:layout_width="@dimen/fifty"
                        android:layout_height="@dimen/fifty"
                        android:id="@+id/progress_image_loading"
                        android:layout_centerInParent="true"
                        />

                    <ImageView
                        android:id="@+id/image_content_detail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/linear_image_content"
                        android:padding="@dimen/dimen_five"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/weight_one"
                    android:padding="@dimen/dimen_five"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title_content_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/title_content_detail"
                        android:textSize="@dimen/text_title_detail"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/one"
                        android:background="@android:color/white"
                        android:layout_margin="@dimen/one"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_five"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_content_detail"
                            android:text="@string/duration_content_detail"
                            android:textSize="@dimen/standart_content_detail"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/duration_content_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/title_content_detail"
                            android:textSize="@dimen/standart_content_detail_text"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/two"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/genre_content_detail"
                            android:textSize="@dimen/standart_content_detail"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/genre_content_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/standart_content_detail_text"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"

                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/two"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rate"
                            android:textSize="@dimen/standart_content_detail"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/rate_content_rate"
                            android:layout_width="match_parent"
                            android:padding="@dimen/two"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/standart_content_detail_text"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/two"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/release"
                            android:textSize="@dimen/standart_content_detail"
                            android:textColor="@android:color/white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/date_content_detail"
                            android:layout_width="match_parent"
                            android:padding="@dimen/two"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/standart_content_detail_text"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"

                            />

                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_ten"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_favorite_detail_not_full"
                            android:src="@drawable/ic_favorite_white_not_full24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_favorite_detail_full"
                            android:src="@drawable/ic_favorite_white_full_24dp"
                            android:visibility="gone"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/trailler"
                            android:textSize="@dimen/standart_content_detail_text"
                            android:textColor="@android:color/white"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/txt_trailer"
                            />
                        <ImageView
                            android:layout_width="@dimen/fifty"
                            android:layout_height="@dimen/fifty"
                            android:id="@+id/image_trailler"
                            android:layout_below="@+id/txt_trailer"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/background_textview"
                            android:src="@drawable/ic_play_arrow_white_24dp"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/one"
                android:background="@android:color/white"
                android:layout_margin="@dimen/dimen_five"
                />

            <LinearLayout
                android:id="@+id/linear_body_content_detail_players"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_five"
                app:layout_constraintTop_toBottomOf="@+id/divider_one">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/weight_one"
                    android:text="@string/players_content_detail"
                    android:textSize="@dimen/standart_content_detail"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_players_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/weight_two"
                    android:textColor="@android:color/white"
                    android:hint="@string/synopsis_content_detail_ex" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear_body_content_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_five"
                app:layout_constraintTop_toBottomOf="@+id/linear_body_content_detail_players">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@integer/weight_one"
                    android:text="@string/synopsis_content_detail"
                    android:textSize="@dimen/standart_content_detail"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_synopsis_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="@integer/weight_two"
                    android:textColor="@android:color/white"
                    android:hint="@string/synopsis_content_detail_ex" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</RelativeLayout>